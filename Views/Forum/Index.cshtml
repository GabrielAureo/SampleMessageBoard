
@model IEnumerable<SampleMessageBoard.Models.Thread>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Forum</h1>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Forum" asp-action="Create">Start new thread</a>
        </div>
    </div>
   
    @if (Model.Count() > 0)
    {
        <ul class="list-group">
            @foreach (var thread in Model) { 
                <li class="list-group-item post-list">
                    <a asp-controller="Thread" asp-action="Index" asp-route-id=@thread.Id>@thread.Title</a> 
                </li>
            }
        </ul>
    }else { 
        <h4 class="text-danger">No threads to show at this time.</h4>
    }



</div>

